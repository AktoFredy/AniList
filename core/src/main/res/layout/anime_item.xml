<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="5dp"
    android:elevation="2dp">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_anime_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/anime_pic"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_anime_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/tv_anime_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_weight="1"
            android:text="@string/type_s"/>

        <TextView
            android:id="@+id/tv_anime_season"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_weight="1"
            android:text="@string/season_s"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>