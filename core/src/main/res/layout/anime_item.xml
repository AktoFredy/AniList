<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/navy"
    app:cardCornerRadius="5dp"
    android:elevation="2dp">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_anime_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/anime_pic"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_anime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/tv_anime_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/type_s"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_anime_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/season_s"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>